<Window x:Class="StinterLogger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StinterLogger"
        mc:Ignorable="d"
        Title="Stinter" Height="450" Width="345"
        ResizeMode="CanMinimize"
        FontFamily="Verdana"
        >
    <Grid>
        <TabControl>
            <TabItem Header="User">
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Label>Username/iRacing ID:</Label>
                    <TextBox Width="75" Height="25" MaxWidth="75" MaxHeight="25" Margin="5 5 5 5"></TextBox>
                    <Label>Password:</Label>
                    <PasswordBox Width="75" Height="25" MaxWidth="75" MaxHeight="25" Margin="5 5 5 5"></PasswordBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Logging options"/>
            <TabItem Header="Fuel calculator">
                <local:FuelCalculatorTab VerticalAlignment="Top" HorizontalAlignment="Left"/>
            </TabItem>
            <TabItem Header="Data log">
                <local:DataLogTab/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
